{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/hw2.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "args": [
                "run"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "args": [
                "watch",
                "run"
            ]
        }
    ]
}
